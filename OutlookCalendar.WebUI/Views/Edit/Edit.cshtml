@using System.Web.UI.WebControls
@model OutlookCalendar.Domain.Entities.Appointment

@{
    ViewBag.Title = "Edit Appointment";
}

<h2>Edit</h2>
<style>
    .row {
        padding: 3px;
    }
</style>

@using (Html.BeginForm("Submit", "Edit"))
{
    @Html.HiddenFor(m => m.EventId)
    <div class="container">
        <div class="row">
            <div class="col-md-1 text-right">Title: </div>
            <div class="col-md-3">
                <input type="text" name="title" value="@Model.Title"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-right">Body: </div>
            <div class="col-md-3">
                <textarea name="body" cols="50" rows="6">@Model.Body</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-right">Location: </div>
            <div class="col-md-3">
                <input type="text" name="location" value="@Model.Title"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-right">Attendee: </div>
            <div class="col-md-3">
                <input type="text" name="attendee" value="@Model.Attendee"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-right">Attendee Email: </div>
            <div class="col-md-3">
                <input type="email" name="attendeeEmail" value="@Model.AttendeeEmail"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-right">Entity Id: </div>
            <div class="col-md-3">
                <input type="text" name="entityId" value="@Model.EntityId"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-right">Start: </div>
            <div class="col-md-3">
                <input name="start" type="datetime-local" value="@Model.Start.ToString("s")" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-right">End: </div>
            <div class="col-md-3">
                <input name="end" type="datetime-local" value="@Model.End.ToString("s")" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 text-right"><input type="submit" value="Save" class="btn btn-primary"/></div>
            <div class="col-md-1">@Html.ActionLink("Cancel", "Back", null, new{@class = "btn btn-default"})</div>
        </div>
    </div>

}

